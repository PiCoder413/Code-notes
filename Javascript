//Welcome to JavaScript Notes
//Intro:
//console.log() will log your text,varible,fucntion,or string to the console:
console.log("Parthiv") //string
console.log(7) //number
console.log('true&false') //booleans

//Math: 
/*
+ = addition
- = subtraction 
* = multiplication
/ = division
% = remainder after divsion
:*/
console.log(2+3)
console.log(3-2)
console.log(3*2)
console.log(10/2)
console.log(10%3)
//Built in Operators(commonly used)
console.log(x.length)
console.log(typeof x)
console.log(Math.floor(Math.random()*10))
//makes whole number between 0-10

//String Concantacetion 
console.log('Cookie'+'God')
console.log('This is'+ x)
//or
let x = 'Parthiv and Will'
console.log(`This is ${variable}`)

//Variables:
//You can declare a variable using "const" and "let"
const weather  = "crazy!"
//This variable cannot be reassaigned 
let arizona = "hot"
//This variable can be changed

//Quickeroony Varible reassignemnt:
//Instead of 
 let num = 7
 num = num + 3
 //Do
 num += 3
 //This works for every other operator
 //Increment and Decrement 
 //Instead of
  let num_two = 2
  num_two = num_two + 1
  //Do
  num_two = num_two++
  //Use "--" for subtraction

